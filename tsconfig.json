	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node",
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": false,
		"declaration": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"rootDir": "src",
		"outDir": "lib"
	}
}
